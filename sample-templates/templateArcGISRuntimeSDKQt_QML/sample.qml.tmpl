import QtQuick 2.12
import Esri.ArcGISRuntime 100.14

Rectangle {
    id: rootRectangle
	clip: true
    width: 800
    height: 600

@if %{UseAPIKey}
    @if %{ThreeDSample}
    SceneView {
        id: sceneView
        anchors.fill: parent

        Component.onCompleted: {
            // Set and keep the focus on SceneView to enable keyboard navigation
            forceActiveFocus();
        }

        Scene {
            id: scene
            initBasemapStyle: Enums.BasemapStyleArcGISImagery

            Surface {
                ArcGISTiledElevationSource {
                    url: "https://elevation3d.arcgis.com/arcgis/rest/services/WorldElevation3D/Terrain3D/ImageServer"
                }
            }
        }
    }
    @else
    MapView {
        id: mapView
        anchors.fill: parent

        Component.onCompleted: {
            // Set and keep the focus on MapView to enable keyboard navigation
            forceActiveFocus();
        }

        Map {
            initBasemapStyle: Enums.BasemapStyleArcGISTopographic
        @if %{UseFeatureLayer}

            // create the feature layer
            FeatureLayer {
                id: featureLayer

                // feature table
                ServiceFeatureTable {
                    id: featureTable
                    url: "%{FeatureLayerURL}"
                }
            }
        @endif
        }
    }
    @endif
@else
    @if %{ThreeDSample}
    SceneView {
        id: sceneView
        anchors.fill: parent

        Component.onCompleted: {
            // Set and keep the focus on SceneView to enable keyboard navigation
            forceActiveFocus();
        }

        Scene {
            id: scene
            BasemapImagery {}

            Surface {
                ArcGISTiledElevationSource {
                    url: "https://elevation3d.arcgis.com/arcgis/rest/services/WorldElevation3D/Terrain3D/ImageServer"
                }
            }
        }
    }
    @else
    MapView {
        id: mapView
        anchors.fill: parent

        Component.onCompleted: {
            // Set and keep the focus on MapView to enable keyboard navigation
            forceActiveFocus();
        }

        Map {
            BasemapTopographic {}
        @if %{UseFeatureLayer}

            // create the feature layer
            FeatureLayer {
                id: featureLayer

                // feature table
                ServiceFeatureTable {
                    id: featureTable
                    url: "%{FeatureLayerURL}"
                }
            }
        @endif
        }
    }
    @endif
@endif
}
